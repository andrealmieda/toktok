<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/base_color_light</item>
        <item name="drawerTextColor">@style/drawer_text_light</item>
        <item name="drawerImageColor">@style/drawer_image_light</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="android:windowBackground">@color/base_color_dark</item>
        <item name="drawerTextColor">@style/drawer_text_dark</item>
        <item name="drawerImageColor">@style/drawer_image_dark</item>
    </style>


    <style name="drawer_text">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="drawer_text_light" parent="drawer_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="drawer_text_dark" parent="drawer_text">
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="drawer_image_light">
        <item name="android:tint">@color/black</item>
        <item name="android:alpha">0.37</item>
    </style>

    <style name="drawer_image_dark">
        <item name="android:tint">@color/white</item>
        <item name="android:alpha">0.3</item>
    </style>

    <style name="item_text_color_dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="item_text_color_light">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="item_header_text_color_dark">
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="item_header_text_color_light">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="item_drawer">
        <item name="android:paddingTop">@dimen/spacing_small_extra</item>
        <item name="android:paddingBottom">@dimen/spacing_small_extra</item>
        <item name="android:paddingLeft">@dimen/spacing_extra</item>
        <item name="android:paddingRight">@dimen/spacing_normal</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ToolBar" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>


    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


</resources>
